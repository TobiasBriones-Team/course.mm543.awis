<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/main_nav_app_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:drawablePadding="@dimen/spacing_16"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="16dp"
        android:text="@string/app_name"
        android:textColor="@color/primaryText"
        android:textSize="24sp"
        app:drawableStartCompat="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/main_nav_user_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:id="@+id/main_nav_user_photo_iv"
            android:layout_width="@dimen/spacing_30"
            android:layout_height="@dimen/spacing_30"
            android:layout_marginStart="@dimen/nav_drawer_horizontal_margin"
            android:layout_marginTop="@dimen/spacing_10"
            android:layout_marginBottom="@dimen/spacing_10"
            android:background="@drawable/ic_baseline_person_24"
            android:contentDescription="@string/user_photo_content_desc" />

        <TextView
            android:id="@+id/main_nav_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="32dp"
            android:ellipsize="end"
            android:textColor="@color/primaryText"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
