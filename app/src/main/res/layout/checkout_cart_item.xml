<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageButton
        android:id="@+id/remove_item_button"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_8"
        android:contentDescription="@string/remove_item_content_desc"
        app:srcCompat="@drawable/ic_shopping_cart_discard_item" />
    <EditText
        android:id="@+id/item_quantity_edit_text"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_8"
        android:ems="10"
        android:inputType="number" />
    <ImageView
        android:id="@+id/product_photo_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/spacing_16"
        app:srcCompat="@drawable/ic_baseline_info_24"
        android:contentDescription="@string/product_photo_content_desc" />
    <TextView
        android:id="@+id/product_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6" />
    <TextView
        android:id="@+id/product_price_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="end" />
</LinearLayout>
